<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" integrity="sha512-0p3K0H3S6Q4bEWZ/WmC94Tgit2ular2/n0ESdfEX8l172YyQj8re1Wu9s/HT9T/T2osUw5Gx/6pAZNk3UKbESw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js" integrity="sha512-lOrm9FgT1LKOJRUXF3tp6QaMorJftUjowOWiDcG5GFZ/q7ukof19V0HKx/GWzXCdt9zYju3/KhBNdCLzK8b90Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="/<%= locals.assetPath('css/header.css')%>">
    <link rel="stylesheet" href="/<%= locals.assetPath('css/main.css')%>">
    <link rel="stylesheet" href="/<%= locals.assetPath('css/footer.css')%>">
    
    <title>Document</title>
</head>
<body>
    <%- include('_header')%>
    <div class="outer-div">
        <aside class="one">
            <div >
                <ul>
                    <li><a class="home" href="/">Home</a></li>
                    <% if(locals.user) {%>
                        <li><a class="profile" href="/user/profile/<%= user._id%>">Profile</a></li>
                        <li><a class="signout" href="/user/sign-out">Sign-Out</a></li>
                    <%} else {%>
                        <li><a class="signup" href="/user/sign-up">Sign-up</a></li>
                        <li><a class="signin" href="/user/sign-in">Sign-In</a></li>
                    <%}%>
                </ul>
            </div>
            <%if(locals.user){%>
                <div class="chat-box visible">
                    <div id="user-chat-box" class="chat">
                        <div class="received">some text</div>
                        <div class="sent">some text</div>
                        <div class="received">some text</div>
                        <div class="sent">some text</div>
                        <div class="sent">some text</div>
                        <div class="sent">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                        <div class="received">some text</div>
                    </div>
                    <div class="form">
                        <input type="text" name="message" placeholder="typehere" id="chat-message-input">
                        <input type="button" id="send-button" value="Send">
                    </div>
                        
                    
                </div>
                <div class="btn"><i class="fas fa-biohazard"></i></div>    
            <%}%>
        </aside>
        <div class="two"><%- body%></div>
        
    </div>
    <%- include('_footer')%>
    <script src="/<%= locals.assetPath('js/click.js')%>"></script>
    <script src="https://cdn.socket.io/4.4.0/socket.io.min.js" integrity="sha384-1fOn6VtTq3PWwfsOrk45LnYcGosJwzMHv+Xh/Jx5303FVOXzEnw0EpLv30mtjmlj" crossorigin="anonymous"></script>
    <script src="/<%= locals.assetPath('js/chat_engine.js')%>"></script>
    <%if(locals.user){%>
        <script>
            new ChatEngine('user-chat-box', '<%= locals.user.email%>')
        </script>
    <%}%>
    <script>
        <% if(flash.success && flash.success.length > 0){%>
            new Noty({
                theme: 'relax',
                text: '<%= flash.success%>',
                type: 'success',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <%}%>
        <% if(flash.error && flash.error.length > 0){%>
            new Noty({
                theme: 'relax',
                text: '<%= flash.error%>',
                type: 'error',
                layout: 'topRight',
                timeout: 2000
            }).show();
        <%}%>
    </script>
    
</body>
</html>